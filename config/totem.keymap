        compatible = "zmk,combos";

        nordicA {
            bindings = <&nordic_A>;
            key-positions = <17 18>;
            layers = <0>;
        };

        NordicAA {
            bindings = <&nordics_a>;
            key-positions = <16 17>;
            layers = <0>;
        };

        swedishao {
            bindings = <&kp LA(A)>;
            key-positions = <6 7>;
            layers = <0>;
        };

        nordic_Ao {
            bindings = <&kp LA(LS(A))>;
            key-positions = <7 8>;
            layers = <0>;
        };

        copyy {
            bindings = <&copys>;
            key-positions = <22 23>;
            layers = <0>;
        };

        ppaste {
            bindings = <&pastes>;
            key-positions = <23 24>;
            layers = <0>;
        };

        swedo {
            bindings = <&sweddisho>;
            key-positions = <27 28>;
            layers = <0>;
