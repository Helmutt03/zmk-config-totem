&trans  &none  &kp PG_UP  &caps_word  &kp PG_DN  &none     &kp COMMA       &kp KP_N1                           &kp KP_N2                       &kp KP_N3                         &kp KP_MULTIPLY                 &trans
                          &trans      &trans     &trans    &kp ENTER       &kp KP_N0                           &kp DOT
            >;
        };

        functionLayer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            display-name = "ADJ";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
